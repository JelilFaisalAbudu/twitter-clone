<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title">Forgot your password?</h2>
        <p class="">Enter your email to reset password</p>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

        <div class="field">
          <div class="control">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: 'input' },  label_html: {class: 'label'}, wrapper: false %>
          </div>
        </div>


        <div class="field">
          <div class="control">
            <%= f.button :submit, "Send ", class: 'button is-info is-medium' %>
          </div>
        </div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
        

